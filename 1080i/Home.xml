<window id="0">
	
	<defaultcontrol>9000</defaultcontrol>
	
	<allowoverlay>yes</allowoverlay>
	
	<controls>
				
		<!-- Fanart -->
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">Breeze/white.png</texture>
		</control>
		
		<control type="multiimage">
			<include>home_close</include>
			<include>CommonFanartVars</include>
			<imagepath background="true">$INFO[Container(9000).ListItem.Icon]</imagepath>
			<visible>!Control.HasFocus(8000)</visible>
		</control>
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">$INFO[Container(8000).ListItem.Property(Fanart)]</texture>
			<visible>Control.HasFocus(8000)</visible>
		</control>
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">$INFO[Container(8001).ListItem.Property(Fanart)]</texture>
			<visible>Control.HasFocus(8001)</visible>
		</control>
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">$INFO[Container(8002).ListItem.Property(Fanart)]</texture>
			<visible>Control.HasFocus(8002)</visible>
		</control>
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">$INFO[Container(8003).ListItem.Property(Fanart)]</texture>
			<visible>Control.HasFocus(8003)</visible>
		</control>
		
		<control type="image">
			<description>Fanart</description>
			<include>CommonFanartVarsSingle</include>
			<texture background="true">$INFO[Container(8006).ListItem.Property(Fanart)]</texture>
			<visible>Control.HasFocus(8006) | Control.HasFocus(8008) | Control.HasFocus(8009) | Control.HasFocus(8010)</visible>
		</control>
	
		<control type="multiimage">
			<description>extrafanart</description>
			<randomize>false</randomize>
			<include>CommonFanartVars</include>
			<imagepath background="true">$INFO[Skin.String(ArtistsLogosPath)]$INFO[MusicPlayer.Artist,,/extrafanart]</imagepath>
			<visible>Player.HasAudio + Skin.HasSetting(musicfanarthome)</visible>	
		</control>
		
		<!-- RSS -->
		<!--include>rssnormal</include>
		
		<!-- Latest/Random Items -->
		<control type="group">
			<include condition="Skin.HasSetting(horizontalmenu)">LatestFilmsHoriz</include>
			<include condition="Skin.HasSetting(horizontalmenu)">LatestTVHoriz</include>
			<include condition="Skin.HasSetting(horizontalmenu)">LatestAlbumsHoriz</include>
			<include>SideMenuVert</include>
			<include>LatestFilmsVert</include>
			<include>vertmenutabs</include>
		</control>
		
		<include condition="Skin.HasSetting(horizontalmenu)">HorizontalMenu</include>
		<include>VerticalMenu</include>
		
		<!--Weather info-->
		<include condition="!Skin.HasSetting(homepageWeatherinfo)+!StringCompare(Weather.Plugin,weather.weatherplus)">Weather_Widget_Standard</include>
		<include condition="!Skin.HasSetting(homepageWeatherinfo)+StringCompare(Weather.Plugin,weather.weatherplus)">Weather_Widget_Plus</include>
		
		<!-- Music Now Playing -->
		<include condition="Skin.HasSetting(horizontalmenu)">MusicNowPlayingHomeHoriz</include>
		<include condition="!Skin.HasSetting(homenowplayingvertvis)">MusicNowPlayingHomeVert</include>
		<include condition="Skin.HasSetting(homenowplayingvertvis)">MusicNowPlayingHomeVertVis</include>
		
		<!-- Video Now Playing -->
		<include condition="Skin.HasSetting(horizontalmenu)">VideoNowPlayingHomeHoriz</include>
		<include condition="!Skin.HasSetting(homenowplayingvertvis)">VideoNowPlayingHomeVert</include>
		<include condition="Skin.HasSetting(homenowplayingvertvis)">VideoNowPlayingHomeVertVis</include>
		
	</controls>
	
</window>
