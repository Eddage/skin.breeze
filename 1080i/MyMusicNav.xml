<?xml version="1.0"?>
<window id="502">
  
	<defaultcontrol always="true">50</defaultcontrol>
  
	<allowoverlay>yes</allowoverlay>
  
	<views>50,500,550,509,506,511,512,513,505</views>
  
	<controls>
		<include>CommonMusicBackground</include>
		
		<control type="group">
				
			<control type="image">
				<include>CommonFanartVarsSingleScroll</include>
				<texture background="true" fallback="special://skin/backgrounds/fallback_music.jpg">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>!Skin.HasSetting(MusicLibraryFanart)</visible>
			</control>
     
			<control type="image">
				<include>CommonFanartVarsSingleScroll</include>
				<texture background="true">$INFO[ListItem.Label,special://skin/extras/genre/music/fanart/,.jpg]</texture>
				<visible>Container.Content(genres)</visible>
			</control>
				
			<control type="multiimage">
				<description>extrafanart</description>
				<fadetime>FanartCrossfadeTime</fadetime>
				<randomize>false</randomize>
				<include>CommonFanartVars</include>
				<imagepath background="true">$INFO[Skin.String(ArtistsLogosPath)]$INFO[ListItem.Artist,,/extrafanart]</imagepath>
				<visible>!Skin.HasSetting(musicextrafanart)</visible>
			</control>
    
		</control>		
	  
		<control type="image"> <!--background overlay (white)-->
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>breeze/bg 90.png</texture>
		</control> 
				
		<control type="image"> <!--base bar-->
			<posy>770</posy>
			<texture>breeze/views/base.png</texture>
			<visible>!Control.IsVisible(506)</visible>
		</control>
				
		<control type="image"> <!--base bar-->
			<posy>770</posy>
			<texture>breeze/views/base.png</texture>
				<animation effect="slide" start="0,0" end="0,-105" time="150" condition="Skin.HasSetting(breeze_tall_list_music)">Conditional</animation>
				<animation effect="slide" start="0,0" end="0,-105" time="150" condition="Control.HasFocus(7002) +!Skin.HasSetting(breeze_tall_list_music)">Conditional</animation>
			<visible>Control.IsVisible(506)</visible>
		</control>
    
		<control type="group">
			<include>CommonRootView</include>
      
			<!-- view id = 50 -->
			<include>InfoList</include>
			<include>Viewtype_Wall</include>
      
			<!-- view id = 500 -->
			<include>LowListMusic</include>
      
			<!-- view id = 506 -->
			<include>ShowcaseQuadrate</include>
      
			<!-- view id = 509 -->
			<include>ShowcaseCD</include>
      
			<!-- view id = 513 -->
			<include>AddonWall</include>
    
		</control>
	
		<control type="button" id="7002">
			<include>HiddenObject</include>
			<onup>Control.Move(506,-1)</onup>
			<onleft>506</onleft>
			<onright>SetFocus(7009)</onright>
			<ondown>Control.Move(506,1)</ondown>
			<onback>50</onback>
			<onclick>PlayMedia($INFO[ListItem.FileNameAndPath])</onclick>
			<visible>Control.IsVisible(506)</visible>
		</control>
	
		<control type="button" id="7000">
			<include>HiddenObject</include>
			<onfocus condition="Skin.HasSetting(infopanelmusic)">SetFocus(7009)</onfocus>
			<onup>9000</onup>
			<onleft condition="Control.IsVisible(509)">Control.Move(509,-1)</onleft>
			<onleft condition="Control.IsVisible(513)">Control.Move(513,-1)</onleft>
			<onright condition="Control.IsVisible(509)">Control.Move(509,1)</onright>
			<onright condition="Control.IsVisible(513)">Control.Move(513,1)</onright>
			<ondown>50</ondown>
			<onclick>PlayMedia($INFO[ListItem.FileNameAndPath])</onclick>
		</control>
    
		<include>Breadcrumbs</include>
		<include>ScrollOffsetLabel</include>
	  
		<control type="image"> <!--background overlay (white)-->
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>breeze/bg 75.png</texture>
			<visible>ControlGroup(9000).HasFocus | Window.IsActive(111) | Window.IsActive(yesnodialog) | Window.IsActive(progressdialog) | Window.IsActive(contentsettings) | Window.IsActive(favourites) | Window.IsActive(okdialog) | Window.IsActive(selectdialog) | Window.IsActive(addoninformation) | Window.IsActive(filestackingdialog) | Window.IsActive(profilesettings) | Window.IsActive(smartplaylisteditor) | Window.IsActive(numericinput)</visible>
			<visible>!Window.IsVisible(virtualkeyboard)</visible>
		</control> 
	  
		<control type="button" id="7009"> <!--settings button-->
			<include>HiddenObject</include>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onup>SetFocus(50)</onup>
			<onleft>SetFocus(7010)</onleft>
			<onright>SetFocus(7010)</onright>
			<ondown>SetFocus(50)</ondown>
			<onclick>SetFocus(9000)</onclick>
		</control>
	  
		<control type="button" id="7010"> <!--shutdown button-->
			<include>HiddenObject</include>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onup>SetFocus(50)</onup>
			<onleft>SetFocus(7009)</onleft>
			<onright>SetFocus(7009)</onright>
			<ondown>SetFocus(50)</ondown>
			<onclick>ActivateWindow(shutdownmenu)</onclick>
		</control>
		
		<control type="group">
			<posx>1788</posx>
			<posy>17</posy>
			<orientation>horizontal</orientation>
			
			<control type="image"> <!--settings button-->
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/settings.png</texture>
				<visible>!Control.HasFocus(7009)</visible>
				<visible>!ControlGroup(9000).HasFocus</visible>
				<visible>!Control.IsVisible(7011)</visible>
			</control>
			
			<control type="image"> <!--settings button f-->
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/settings f.png</texture>
				<visible>Control.HasFocus(7009) | ControlGroup(9000).HasFocus</visible>
			</control>
			
			<control type="image"> <!--shutdown button-->
				<posx>61</posx>
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/shutdown.png</texture>
				<visible>!Control.HasFocus(7010)</visible>
				<visible>!Window.IsActive(shutdownmenu)</visible>
				<visible>!Control.IsVisible(7012)</visible>
			</control>
			
			<control type="image"> <!--shutdown button f-->
				<posx>61</posx>
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/shutdown f.png</texture>
				<visible>Control.HasFocus(7010) | Window.IsVisible(shutdownmenu)</visible>
			</control>
			
		</control>
    
		<include>Media_Menu</include>
  
	</controls>

</window>
