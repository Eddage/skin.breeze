<window id="2">
	
	<defaultcontrol always="true">50</defaultcontrol>
	
	<allowoverlay>yes</allowoverlay>
	
	<views>50,509,500,505,511,512,517</views>
	
	<controls>
		
		<include>CommonPictureBackground</include>
	  
		<control type="image"> <!--background overlay (white)-->
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>breeze/bg 75.png</texture>
		</control> 	
				
		<control type="image"> <!--base bar-->
			<posy>770</posy>
			<texture>breeze/views/base.png</texture>
		</control>
    
		<control type="group">
			<include>Animation_OpenCloseZoom</include>		
			<include>CommonRootView</include> <!-- view id = 50 -->
			<include>InfoList</include>
			<include>ShowcaseQuadrate</include><!-- view id = 51 -->
			<include>AddonWall</include>
			<include>Viewtype_Wall</include><!-- view id = 500 -->
			<include>Stripshow</include>
		</control>
    
		<include>ScrollOffsetLabel</include>
		<include>Breadcrumbs</include>
	  
		<control type="image"> <!--background overlay (white)-->
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>breeze/bg 75.png</texture>
			<visible>ControlGroup(9000).HasFocus | Window.IsActive(111) | Window.IsActive(yesnodialog) | Window.IsActive(progressdialog) | Window.IsActive(contentsettings) | Window.IsActive(favourites) | Window.IsActive(okdialog) | Window.IsActive(selectdialog) | Window.IsActive(addoninformation) | Window.IsActive(filestackingdialog) | Window.IsActive(profilesettings) | Window.IsActive(smartplaylisteditor) | Window.IsActive(numericinput)</visible>
			<visible>!Window.IsVisible(virtualkeyboard)</visible>
		</control> 
	  
		<control type="button" id="7009"> <!--settings button-->
			<include>HiddenObject</include>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onup>SetFocus(50)</onup>
			<onleft>SetFocus(7010)</onleft>
			<onright>SetFocus(7010)</onright>
			<ondown>SetFocus(50)</ondown>
			<onclick>SetFocus(9000)</onclick>
		</control>
	  
		<control type="button" id="7010"> <!--shutdown button-->
			<include>HiddenObject</include>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onup>SetFocus(50)</onup>
			<onleft>SetFocus(7009)</onleft>
			<onright>SetFocus(7009)</onright>
			<ondown>SetFocus(50)</ondown>
			<onclick>ActivateWindow(shutdownmenu)</onclick>
		</control>
		
		<control type="group">
			<posx>1788</posx>
			<posy>17</posy>
			<orientation>horizontal</orientation>
			
			<control type="image"> <!--settings button-->
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/settings.png</texture>
				<visible>!Control.HasFocus(7009)</visible>
				<visible>!ControlGroup(9000).HasFocus</visible>
				<visible>!Control.IsVisible(7011)</visible>
			</control>
			
			<control type="image"> <!--settings button f-->
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/settings f.png</texture>
				<visible>Control.HasFocus(7009) | ControlGroup(9000).HasFocus</visible>
			</control>
			
			<control type="image"> <!--shutdown button-->
				<posx>61</posx>
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/shutdown.png</texture>
				<visible>!Control.HasFocus(7010)</visible>
				<visible>!Window.IsActive(shutdownmenu)</visible>
				<visible>!Control.IsVisible(7012)</visible>
			</control>
			
			<control type="image"> <!--shutdown button f-->
				<posx>61</posx>
				<width>51</width>
				<height>51</height>
				<texture>breeze/menus/shutdown f.png</texture>
				<visible>Control.HasFocus(7010) | Window.IsVisible(shutdownmenu)</visible>
			</control>
			
		</control>
		
		<include>Media_Menu</include>
		
	</controls>

</window>
