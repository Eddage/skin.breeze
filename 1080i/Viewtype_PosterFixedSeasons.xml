						<posx>480</posx>
						<posy>-80</posy>
						<width>495</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>breeze32</font>
						<textcolor>infogreynf</textcolor>
						<shadowcolor>90ffffff</shadowcolor>
						<label>[B]$INFO[ListItem.TVShowTitle][/B]</label>
						<visible>Skin.HasSetting(breeze_tv_logos) + !Skin.HasSetting(stylishfont)</visible>
					</control>
			
					<control type="label"> <!--tv logo/stylish-->
						<posx>505</posx>
						<posy>-68</posy>
						<width>495</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>stylish30b</font>
						<textcolor>infogreynf</textcolor>
