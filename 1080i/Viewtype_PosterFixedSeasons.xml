				<posy>290</posy>
				<width>1415</width>
				<height>220</height>
				<align>justify</align>
				<font>breeze32</font>
				<label fallback="312577">$INFO[Container.ShowPlot]</label>
				<autoscroll delay="23000" time="4000" repeat="20000">Skin.HasSetting(AutoScroll)</autoscroll>
				<textcolor>infogrey</textcolor>
				<visible>!Control.HasFocus(7003)</visible>
			</control>
			
			<control type="image"> <!--tv show logo (tv shows/seasons)-->
				<posx>1455</posx>
				<posy>150</posy>
				<width>375</width>
				<height>120</height>
				<aspectratio>keep</aspectratio>
				<fadetime>500</fadetime>
				<texture background="true">$INFO[ListItem.path,,./logo.png]</texture>
