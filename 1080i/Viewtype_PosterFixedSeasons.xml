<includes> 	
	
	<include name="PosterFixedSeasons">
		<include>Animation_FadedByMenu</include>
		
		<control type="fixedlist" id="502">
			<visible>Container.Content(seasons)</visible>
			<visible>!Container.Content(LiveTV)</visible>
			<posx>0</posx>
			<posy>110</posy>
			<height>775</height>
			<width>1920</width>
			<onleft>502</onleft>
			<onright>502</onright>
			<onup>7009</onup>
			<ondown>67</ondown>
			<viewtype label="Poster Fixed">bigwrap</viewtype>
			<pagecontrol>67</pagecontrol>
			<scrolltime tween="cubic" easing="out">500</scrolltime>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
					
			<itemlayout height="695" width="359">
						
				<control type="image">
					<posx>60</posx>
					<posy>20</posy>
					<texture background="true">breeze/home/folder tile.png</texture>
				</control>
						
				<control type="image">
					<posx>70</posx>
					<posy>30</posy>
					<width>344</width>
					<height>515</height>
					<aspectratio>stretch</aspectratio>
					<texture background="true" diffuse="breeze/home/folder tile dif.png">$INFO[ListItem.Icon]</texture>
				</control>
					
				<control type="image"> <!--watched icon-->
					<posx>365</posx>
					<posy>495</posy>
					<width>40</width>
					<height>40</height>
					<fadetime>200</fadetime>
					<texture>breeze/masks/watched.png</texture>
					<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(watchedoverlay)+!IsEmpty(ListItem.Overlay)</visible>
				</control>
						
			</itemlayout>
					
			<focusedlayout height="695" width="359">
				
				<control type="group">
				
					<animation type="Conditional" condition="Window.IsActive(contextmenu)">
						<effect type="rotatey" start="0" end="180" time="500" tween="cubic" easing="inout" center="242,0" delay="25" />
						<effect type="fade" start="100" end="0" time="200" delay="150" />
					</animation>
				
					<control type="image">
						<posx>56</posx>
						<posy>10</posy>
						<width>372</width>
						<height>556</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>500</fadetime>
						<texture background="true" diffuse="breeze/home/folder tile dif.png">$INFO[ListItem.Icon]</texture>
					</control>
						
					<control type="image">
						<posx>46</posx>
						<posy>0</posy>
						<width>392</width>
						<height>576</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>500</fadetime>
						<texture background="true">breeze/home/search folder f border.png</texture>
					</control>
					
					<control type="image"> <!--watched icon-->
						<posx>375</posx>
						<posy>515</posy>
						<width>45</width>
						<height>45</height>
						<fadetime>200</fadetime>
						<texture>breeze/masks/watched.png</texture>
						<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(watchedoverlay)+!IsEmpty(ListItem.Overlay)</visible>
					</control>
				
				</control>
								
			</focusedlayout>
		
		</control>
	
		<control type="group">
			<posx>0</posx>
			<posy>520</posy>
			<visible>Control.IsVisible(502)</visible>
			
			<control type="group"> <!--title (season level)-->
				<visible>Container.Content(seasons)</visible>
				<posx>-410</posx>
				<posy>265</posy>
				
				<control type="group"> <!--season title-->
			
					<control type="label"> <!--tv logo/normal-->
						<posx>480</posx>
						<posy>-105</posy>
						<width>1380</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>breeze45</font>
						<textcolor>infogrey</textcolor>
						<shadowcolor>90ffffff</shadowcolor>
						<label>[B]$INFO[ListItem.Title][/B]</label>
						<visible>!Container.Content(movies) + Skin.HasSetting(breeze_tv_logos) + !Skin.HasSetting(stylishfont)</visible>
					</control>
			
					<control type="label"> <!--tv logo/stylish-->
						<posx>480</posx>
						<posy>-95</posy>
						<width>1800</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>stylish45</font>
						<textcolor>infogrey</textcolor>
						<shadowcolor>90ffffff</shadowcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!Container.Content(movies) + Skin.HasSetting(breeze_tv_logos) + Skin.HasSetting(stylishfont)</visible>
					</control>
			
					<control type="label"> <!--no tv logo/normal-->
						<posx>480</posx>
						<posy>-105</posy>
						<width>1380</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>breeze45</font>
						<textcolor>infogrey</textcolor>
						<shadowcolor>90ffffff</shadowcolor>
						<label>[B]$INFO[ListItem.Title][/B]</label>
						<visible>[!Skin.HasSetting(breeze_tv_logos) + !Skin.HasSetting(stylishfont)] | [Container.Content(movies) + !Skin.HasSetting(stylishfont)]</visible>
					</control>
			
					<control type="label"> <!--no tv logo/stylish-->
						<posx>480</posx>
						<posy>-95</posy>
						<width>1800</width>
						<height>65</height>
						<aligny>center</aligny>
						<font>stylish45</font>
						<textcolor>infogrey</textcolor>
						<shadowcolor>90ffffff</shadowcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!Skin.HasSetting(breeze_tv_logos) + Skin.HasSetting(stylishfont) | [Container.Content(movies) + Skin.HasSetting(stylishfont)]</visible>
					</control>
					
				</control>
				
			</control>
				
			<control type="group">
				<include>BreezeTimePanel</include>
			</control>
			
			<control type="group">
				<include>BreezeRightInfo</include>
			</control>	
				
			<control type="textbox"> <!--plot (tv shows)-->
				<posx>250</posx>
				<posy>290</posy>
				<width>1415</width>
				<height>220</height>
				<align>justify</align>
				<font>breeze32</font>
				<label fallback="312577">$INFO[Container.ShowPlot]</label>
				<autoscroll delay="23000" time="4000" repeat="20000">true</autoscroll>
				<textcolor>infogrey</textcolor>
				<visible>!Control.HasFocus(7003)</visible>
			</control>
			
			<control type="image"> <!--tv show logo (tv shows/seasons)-->
				<posx>1455</posx>
				<posy>150</posy>
				<width>375</width>
				<height>120</height>
				<aspectratio>keep</aspectratio>
				<fadetime>500</fadetime>
				<texture background="true">$INFO[ListItem.path,,./logo.png]</texture>
				<visible>Skin.HasSetting(breeze_tv_logos)</visible>
			</control>
				
		</control>
	
		<control type="group">
			<visible>Control.IsVisible(502)</visible>	
			<include>BreezeNowPlayingRight</include>		
		</control>		
		
		<control type="scrollbar" id="67"> <!--scrollbar-->
			<posx>0</posx>
			<posy>750</posy>
			<width>1920</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar>-</texturesliderbar>
			<texturesliderbarfocus>-</texturesliderbarfocus>
			<textureslidernib>breeze/views/scrollbar nub nf horiz.png</textureslidernib>
			<textureslidernibfocus>breeze/views/scrollbar nub f horiz.png</textureslidernibfocus>
			<onup>502</onup>
			<ondown>502</ondown>
			<showonepage>false</showonepage>
			<visible>Control.IsVisible(502)</visible>
		</control>
		
	</include>
	
</includes>