			<posx>0</posx>
			<posy>150</posy>
			<height>775</height>
			<width>1920</width>
			<onleft>502</onleft>
			<onright>502</onright>
			<onup>7009</onup>
			<ondown>67</ondown>
			<viewtype label="Poster Fixed">bigwrap</viewtype>
			<pagecontrol>67</pagecontrol>
			<scrolltime>200</scrolltime>
			<focusposition>1</focusposition>
			<orientation>horizontal</orientation>
			<preloaditems>4</preloaditems>		
		
			<itemlayout width="305" height="397">
					
				<control type="image"> <!--border-->
					<posx>12</posx>
					<posy>131</posy>
					<width>260</width>
					<height>370</height>
					<texture background="true">breeze/masks/poster folder small border.png</texture>
					<fadetime>200</fadetime>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
				
				<control type="image"> <!--cover-->
					<posx>22</posx>
					<posy>141</posy>
					<width>240</width>
					<height>350</height>
					<texture background="true" diffuse="breeze/masks/poster folder small.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">keep</aspectratio>
					<fadetime>200</fadetime>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
					
				<control type="image"> <!--cover-->
					<posx>22</posx>
					<posy>141</posy>
					<width>240</width>
					<height>350</height>
					<texture background="true" diffuse="breeze/masks/poster folder small.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>200</fadetime>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
					
				<control type="image"> <!--watched icon-->
					<posx>228</posx>
					<posy>458</posy>
					<width>30</width>
					<height>30</height>
					<fadetime>200</fadetime>
					<texture>breeze/masks/watched.png</texture>
					<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(watchedoverlay)+!IsEmpty(ListItem.Overlay)</visible>
				</control>
					
			</itemlayout>
				
			<focusedlayout width="415" height="600">
				
				<control type="group">
				
					<animation type="Conditional" condition="Window.IsActive(contextmenu)">
						<effect type="rotatey" start="0" end="180" time="500" tween="cubic" easing="inout" center="195,0" delay="25" />
						<effect type="fade" start="100" end="0" time="200" delay="150" />
					</animation>
					
					<control type="image"> <!--border focused-->
						<posx>16</posx>
						<posy>61</posy>
						<width>358</width>
						<height>513</height>
						<aspectratio>stretch</aspectratio>
						<texture>breeze/masks/info list folder border.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="68" end="100" time="400" delay="75" tween="sine" easing="inout" />
						</animation>
						<aspectratio>stretch</aspectratio>			
					</control>
				
					<control type="image"> <!--cover focused-->
						<posx>26</posx>
						<posy>71</posy>
						<width>338</width>
						<height>493</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="breeze/masks/info list folder.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="68" end="100" time="400" delay="75" tween="sine" easing="inout" />
						</animation>
						<visible>IsEmpty(ListItem.Title)</visible>			
					</control>
					
					<control type="image"> <!--cover focused-->
						<posx>26</posx>
						<posy>71</posy>
						<width>338</width>
						<height>493</height>
						<aspectratio>stretch</aspectratio>
						<texture diffuse="breeze/masks/info list folder.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="68" end="100" time="400" delay="75" tween="sine" easing="inout" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					
					<control type="image"> <!--watched icon-->
						<posx>315</posx>
						<posy>515</posy>
						<width>45</width>
						<height>45</height>
						<fadetime>200</fadetime>
						<texture>breeze/masks/watched.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="135,198" start="75" end="100" time="400" delay="75" tween="sine" easing="inout" />
						</animation>
						<visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(watchedoverlay)+!IsEmpty(ListItem.Overlay)</visible>
					</control>
				
				</control>
					
			</focusedlayout>
		
		</control>
	
