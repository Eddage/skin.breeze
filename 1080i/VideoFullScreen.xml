<window id="2005">
	<defaultcontrol>-</defaultcontrol>
	
	<controls>
	
		<control type="group">
		
			<animation effect="slide" start="0,0" end="0,35" time="200" condition="Window.IsVisible(seekbar)">Conditional</animation>

			<animation type="WindowOpen">
				<effect type="fade" time="400" start="0" end="100" easing="out" tween="cubic" />
				<effect type="zoom" time="400" start="50" end="100" center="960,125" easing="out" tween="back" />
			</animation>
			
			<animation type="WindowClose">
				<effect type="fade" time="400" start="100" end="0" easing="out" tween="cubic" />
				<effect type="zoom" time="400" start="100" end="50" center="960,125" easing="inout" tween="back" />
			</animation>

			<animation type="Visible">
				<effect type="fade" time="400" start="0" end="100" easing="out" tween="cubic" />
				<effect type="zoom" time="400" start="50" end="100" center="960,125" easing="out" tween="back" />
			</animation>
			
			<animation type="Hidden">
				<effect type="fade" time="400" start="100" end="0" easing="out" tween="cubic" />
				<effect type="zoom" time="400" start="100" end="50" center="960,125" easing="inout" tween="back" />
			</animation>
			
			<!-- codec infos -->
	  
			<control type="image"> <!--background overlay (white)-->
				<posx>45</posx>
				<posy>27</posy>
				<texture>breeze/osd/system bg.png</texture>			
			</control> 
			
			<control type="group">
				<posy>-15</posy>
				
				<control type="label" id="10">
					<description>row 1 label</description>
					<posx>75</posx>
					<posy>60</posy>
					<width>1770</width>
					<height>30</height>
					<label>-</label>
					<align>left</align>
					<font>breeze32</font>
					<include>VisibleFadeEffect</include>
				</control>
				
				<control type="label" id="11">
					<description>row 2 label</description>
					<posx>75</posx>
					<posy>105</posy>
					<width>1770</width>
					<height>30</height>
					<label>-</label>
					<align>left</align>
					<font>breeze32</font>
					<include>VisibleFadeEffect</include>
				</control>
				
				<control type="label" id="12">
